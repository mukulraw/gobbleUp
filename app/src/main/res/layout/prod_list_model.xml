<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:background="#fff"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/prodImage"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"

            tools:ignore="ContentDescription" />

        <RelativeLayout
            android:layout_marginStart="10dp"

            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/prodName"
                android:textSize="14sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="name"
                android:paddingTop="5dp"
                android:textAllCaps="true"
                android:textStyle="normal"
                android:gravity="start"
                android:textColor="#000000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prodPrice"
                android:textStyle="italic"
                android:textSize="12sp"
                android:layout_below="@+id/prodName"
                android:text="Price"
                android:layout_alignParentStart="true"
                android:gravity="start|center_vertical"
                android:paddingTop="10dp"

                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_alignParentBottom="false"
                android:textColor="#666666"

                />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_marginStart="10dp"
                android:rating="5"
                android:id="@+id/rraatteerr"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/prodPrice"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/switcher"


                android:layout_below="@+id/rraatteerr"

                android:layout_marginTop="5dp"

                android:textColor="#666666"
                android:textAllCaps="true"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="10sp"
                android:gravity="center"
                android:text="Add to compare"
                tools:ignore="SmallSp" />






            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:id="@+id/addlist"
                android:drawableEnd="@drawable/plus2"
                android:gravity="center"
                android:clickable="true"
                android:layout_below="@+id/prodName"
                android:focusable="true"
                android:drawableTint="@color/colorPrimaryDark"
                android:padding="5dp"
                android:layout_toStartOf="@+id/plus"
                android:layout_alignParentEnd="true"
                android:text="ADD TO BASKET"
                tools:ignore="SmallSp,UnknownId,UnknownIdInLayout,UnusedAttribute" />









            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:padding="8dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/rraatteerr"

                android:id="@+id/switcher"

                android:layout_alignParentEnd="true" />


        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>