        android:orientation="vertical"
        android:layout_height="match_parent">


        <include
            layout="@layout/toolbar"
            app:layout_scrollFlags="scroll|enterAlways"
            />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:id="@+id/layoutToReplace"
       />












    </LinearLayout>
