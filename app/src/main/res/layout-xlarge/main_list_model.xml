<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_margin="10dp"
    card_view:cardUseCompatPadding="true"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:minHeight="?attr/listPreferredItemHeight"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:focusable="false"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@android:drawable/ic_menu_delete"
                android:id="@+id/deleteList"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:paddingTop="5dp"
                android:textSize="24sp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                android:text="New Text"
                android:id="@+id/addlistlistName" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="Id"
            android:visibility="gone"
            android:paddingTop="5dp"
            android:textSize="24sp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/addlistlistId"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"
                android:text="New Text"
                android:layout_alignParentStart="true"
                android:id="@+id/addlidtlidtCreatedTime" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="total"
                android:layout_marginTop="10dp"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/addlidtlidtCreatedTime"
                android:id="@+id/addlistTotalItem"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT"
                android:textColor="#f9d0d0"
                android:layout_marginTop="10dp"
                android:focusable="false"
                android:textSize="24sp"
                android:clickable="true"
                android:id="@+id/edit"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentEnd="true"
                />


        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>